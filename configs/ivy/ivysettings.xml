<ivysettings>
  <property name="ivy.os.classifier" value="windows"/>
  <property name="dest.repo.dir" value="c:\\dev\\ivyRep"/>
  <property name="ivy.cache.dir" value="c:\\dev\\ivyRep"/>
  
  <settings defaultCache="${ivy.cache.dir}"
            defaultResolver="chained"
            defaultConflictManager="all" />    <!-- in order to get all revisions without any eviction -->
  
  <resolvers>
    <chain name="chained" returnFirst="true">
		  <filesystem name="libraries">
		    <artifact pattern="${dest.repo.dir}/[artifact]-[revision](-[classifier]).[ext]"/>
		  </filesystem>
			<ibiblio name="shared" m2compatible="true" root="http://raonbuild.on.reserveamerica.com:8081/artifactory/repo"/>
			<ibiblio name="release" m2compatible="true" root="http://raonbuild.on.reserveamerica.com:8081/artifactory/libs-releases-local"/>
			<ibiblio name="snapshot" m2compatible="true" root="http://raonbuild.on.reserveamerica.com:8081/artifactory/libs-snapshots-local"/>
		</chain>
	</resolvers>
</ivysettings>